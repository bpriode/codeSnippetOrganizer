<link rel="stylesheet" href="../main.css">

{{#snippets}}
  <form class="" action="/edit/{{id}}" method="post">
    <h2>Edit Snippet</h2>
    <br>
    <input type="text" name="title" value="{{title}}" placeholder="title of snippet">
    <br>
    <br>
    <textarea name="code" rows="8" cols="80">{{code}}</textarea>
    <br>
    <input type="text" name="notes" value="{{notes}}" placeholder=" notes/comments">
    <br>
    <p>Help to Organize your Snippets</p>
    <input type="text" name="language" value="{{language}}" placeholder="language">
    <input type="text" name="tag" value="{{tag}}" placeholder="search tags">
    <br>
    <input type="submit" name="submit" placeholder="submit">
  </form>
 {{/snippets}}
